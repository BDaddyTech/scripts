#!/bin/sh -

help() {
    echo "wa without any parameters will load all anime in the main folder \nUse -n to pattern match a name"
}

open_mpv() {
    cd ~/Videos/Anime
    /c/"Program Files"/mpv/mpv.exe --fs *$1*[.mp4\|.mpv\|.mkv]
}

# Open help
if [ "$1" = "-h" ]
then
   help 
# No parameter then open all mainfolder anime 
elif [ -z "$1" ]
then
    open_mpv
# Only open anime with pattern matched name
elif [ "$1" = "-n" ]
then
    open_mpv $2
else 
    echo "Unsupported command, type wa -h for help"
fi